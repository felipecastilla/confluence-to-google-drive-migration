# Atlassian Cloud credentials
# Base URL of your Atlassian site, including protocol (e.g. https://your-domain.atlassian.net)
ATLASSIAN_BASE_URL=
# Email address associated with your Atlassian account
ATLASSIAN_EMAIL=
# API token generated from https://id.atlassian.com/manage/api-tokens
ATLASSIAN_API_TOKEN=

# Optional: override the default attachment path used when downloading pages
ATLASSIAN_EXPORT_PATH=confluence-export
# Optional: customize where downloaded .doc exports are stored
ATLASSIAN_DOWNLOAD_PATH=downloaded-pages
# Optional: customize the directory that will contain rendered documents
ATLASSIAN_OUTPUT_PATH=output

# Google Cloud / Drive credentials
# Absolute or relative path to the service account JSON that has Drive API access
GOOGLE_APPLICATION_CREDENTIALS=
# Comma separated OAuth scopes to request when building the Drive client
GOOGLE_AUTH_SCOPES=https://www.googleapis.com/auth/drive.file
# Optional: ID of the Drive folder that should act as the migration root
GOOGLE_DRIVE_PARENT_FOLDER_ID=
